<h1>hello</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %></li>
  <%= link_to 'Delete',
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this task?" } %>
  <% end %>
</ul>

<p><%= link_to 'Add a new task', tasks_new_path %></p>
